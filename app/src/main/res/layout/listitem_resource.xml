<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/programName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Resource Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="map"
            android:text="Resource Location"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/geographicArea_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geo Area"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mealInformation_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Information"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/website_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"
            android:text="Resource Website"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneNumber_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="Phone Number"
            android:textColor="#000000"
            android:textSize="15dp" />


    </LinearLayout>

</android.support.v7.widget.CardView>