<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/programName_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Resource Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/location_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Resource Location"
        android:autoLink="map"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/website_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Resource Website"
        android:textSize="15dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:clickable="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/geographicArea_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Geo Area"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/mealInformation_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Meal Information"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/phoneNumber_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:autoLink="phone"
        android:textColor="#000000"
        android:textSize="15dp" />

</LinearLayout>