<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hygieneName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Resource Name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/hygieneAddress_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoLink="map"
        android:text="Resource Location"
        android:textColor="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/hygCategory_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Information"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/hygWebsite_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoLink="all"
        android:clickable="true"
        android:linksClickable="true"
        android:text="Resource Website"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:id="@+id/hygPhoneNumber_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="Phone Number"
        android:textColor="#000000"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="107dp" />
    <TextView
        android:id="@+id/hygieneInformation_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Information"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/hygieneHours_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoLink="all"
        android:clickable="true"
        android:linksClickable="true"
        android:text="Resource Website"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:id="@+id/hygArea_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text="Phone Number"
        android:textColor="#000000"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="107dp" />

</LinearLayout>