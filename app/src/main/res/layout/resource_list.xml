<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/resource_background"
    android:paddingBottom="13dp">

    <TextView
        android:id="@+id/nameOfProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:text="Name Of Program"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameOfProgram"
        android:layout_alignStart="@+id/nameOfProgram"
        android:layout_below="@+id/nameOfProgram"
        android:text="Resource Location" />

    <TextView
        android:id="@+id/peopleServed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mealServed"
        android:layout_alignRight="@+id/mealServed"
        android:layout_alignTop="@+id/nameOfProgram"
        android:text="Resource People Served"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/mealServed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/peopleServed"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="Resource Meal Served" />

    <TextView
        android:id="@+id/dayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:layout_below="@+id/location"
        android:text="Resource Hours" />

</RelativeLayout>