<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/programName_txt"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilda_display"
        android:gravity="center"
        android:paddingBottom="10sp"
        android:text="Resource Name"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mealInformation_txt"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilda_display"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        android:text="Meal Information"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/phoneNumber_txt"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:autoLink="phone"
                android:background="@drawable/ic_phone_ring_outline"
                android:text="Phone Number"
                android:textColor="@android:color/transparent"
                android:textColorLink="@android:color/transparent"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/website_txt"
                android:layout_width="40dp"
                android:layout_height="40dp"


                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:autoLink="all"
                android:background="@drawable/ic_mouse_outline_filled"
                android:clickable="true"
                android:linksClickable="true"
                android:text="Resource Website"
                android:textColor="@android:color/transparent"
                android:textColorLink="@android:color/transparent"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location_txt"
                android:layout_width="40dp"
                android:layout_height="40dp"


                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="0dp"
                android:autoLink="map"
                android:background="@drawable/ic_location_marker_outline_filled"
                android:text="Resource Location"
                android:textColor="@android:color/transparent"
                android:textColorLink="@android:color/transparent" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/geographicArea_txt"
        android:layout_width="339dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/gilda_display"
        android:gravity="center"
        android:padding="5dp"
        android:text="Geo Area"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="bold" />


</LinearLayout>

