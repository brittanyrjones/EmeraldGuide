<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/programName_txt"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilda_display"
        android:gravity="center"
        android:paddingBottom="10sp"
        android:text="Resource Name"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mealInformation_txt"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilda_display"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        android:text="Meal Information"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView

            android:id="@+id/phoneNumber_txt"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:autoLink="phone"
            android:background="@drawable/ic_phone_black_24dp"
            android:text="Phone Number"
            android:textColor="@android:color/transparent"
            android:textColorLink="@android:color/transparent"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/website_txt"
            android:layout_width="40dp"
            android:layout_height="40dp"


            android:autoLink="all"
            android:background="@drawable/ic_open_in_browser_black_24dp"
            android:clickable="true"
            android:linksClickable="true"
            android:text="Resource Website"
            android:textColor="@android:color/transparent"
            android:textColorLink="@android:color/transparent"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="40dp"
            android:layout_height="40dp"


            android:autoLink="map"
            android:background="@drawable/ic_directions_black_24dp"
            android:text="Resource Location"
            android:textColor="@android:color/transparent"
            android:textColorLink="@android:color/transparent" />

    </LinearLayout>

    <TextView
        android:id="@+id/geographicArea_txt"
        android:layout_width="339dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/gilda_display"
        android:gravity="center"
        android:padding="5dp"
        android:text="Geo Area"
        android:textColor="@android:color/holo_purple"
        android:textSize="10dp"
        android:textStyle="bold" />


</LinearLayout>

