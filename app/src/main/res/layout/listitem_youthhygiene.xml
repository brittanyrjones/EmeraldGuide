<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="15dp"
    card_view:contentPadding="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hygieneName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Resource Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hygieneAddress_txt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/hygWebsite_txt"
            android:layout_toEndOf="@+id/hygWebsite_txt"
            android:autoLink="map"
            android:background="@drawable/ic_directions_black_24dp"
            android:text="Resource Location"
            android:textColor="@android:color/transparent"
            android:textColorLink="@android:color/transparent"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hygWebsite_txt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/hygArea_txt"
            android:layout_centerHorizontal="true"
            android:autoLink="all"
            android:background="@drawable/ic_open_in_browser_black_24dp"
            android:clickable="true"
            android:linksClickable="true"
            android:text="Resource Website"
            android:textColor="@android:color/transparent"
            android:textColorLink="@android:color/transparent"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hygCategory_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hygieneAddress_txt"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="category"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/hygPhoneNumber_txt"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_alignTop="@+id/hygieneAddress_txt"
            android:layout_toStartOf="@+id/hygWebsite_txt"
            android:autoLink="phone"
            android:background="@drawable/ic_phone_black_24dp"
            android:text="Phone Number"
            android:textColor="@android:color/transparent"
            android:textColorLink="@android:color/transparent"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hygieneInformation_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hygieneHours_txt"
            android:text="Meal Information"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hygieneHours_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hygieneName_txt"
            android:autoLink="all"
            android:clickable="true"
            android:gravity="center"
            android:linksClickable="true"
            android:text="hours"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hygArea_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:autoLink="phone"
            android:gravity="center"
            android:text="area"
            android:textColor="#000000"
            android:textSize="15dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>