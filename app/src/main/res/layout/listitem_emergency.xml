<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/emergencyName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Emergency Name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/emergencyInformation_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoLink="map"
        android:text="Emergency Information"
        android:textColor="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/emgPhoneNumber_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="phone"
        android:textColor="#000000"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/emgCategory_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Information"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/emgWebsite_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoLink="all"
        android:clickable="true"
        android:linksClickable="true"
        android:text="Resource Website"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="65dp" />


</LinearLayout>