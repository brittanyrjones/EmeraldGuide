<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    android:layout_marginBottom="10dp"

    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/emergencyName_txt"
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"


            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/gilda_display"
            android:gravity="center_horizontal"
            android:padding="5sp"
            android:text="Emergency Name"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emergencyInformation_txt"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/emergencyName_txt"
            android:autoLink="map"
            android:text="Emergency Information"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/emgPhoneNumber_txt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:autoLink="phone"
            android:background="@drawable/ic_phone_black_24dp"
            android:gravity="center"
            android:text="phone"
            android:textColor="@android:color/transparent"
            android:textColorLink="@android:color/transparent"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/emgCategory_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Information"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/emgWebsite_txt"
            android:layout_width="59dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/emgPhoneNumber_txt"
            android:autoLink="all"
            android:background="@drawable/ic_open_in_browser_black_24dp"
            android:clickable="true"
            android:linksClickable="true"
            android:text="Resource Website"
            android:textColor="@android:color/transparent"
            android:textColorLink="@android:color/transparent"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>