<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="1dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/shelterName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/gilda_display"
            android:gravity="center"
            android:paddingBottom="10sp"
            android:text="Resource Name"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_above="@+id/shelArea_txt"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/shelPhoneNumber_txt"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_alignTop="@+id/shelterAddress_txt"
                android:layout_toStartOf="@+id/shelWebsite_txt"
                android:autoLink="phone"
                android:background="@drawable/ic_phone_black_24dp"
                android:text="Phone Number"
                android:textColor="@android:color/transparent"
                android:textColorLink="@android:color/transparent"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/shelWebsite_txt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/shelArea_txt"
                android:layout_centerHorizontal="true"
                android:autoLink="all"
                android:background="@drawable/ic_open_in_browser_black_24dp"
                android:clickable="true"
                android:linksClickable="true"
                android:text="Resource Website"
                android:textColor="@android:color/transparent"
                android:textColorLink="@android:color/transparent"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shelterAddress_txt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/shelWebsite_txt"
                android:layout_toEndOf="@+id/shelWebsite_txt"
                android:autoLink="map"
                android:background="@drawable/ic_directions_black_24dp"
                android:text="Resource Location"
                android:textColor="@android:color/transparent"
                android:textColorLink="@android:color/transparent" />

        </LinearLayout>

        <TextView
            android:id="@+id/shelterHours_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/shelterName_txt"
            android:autoLink="all"
            android:clickable="true"
            android:fontFamily="@font/gilda_display"
            android:gravity="center"
            android:linksClickable="true"
            android:text="Resource Website"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shelArea_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="23dp"
            android:autoLink="phone"
            android:fontFamily="@font/gilda_display"
            android:gravity="center"
            android:text="Phone Number"
            android:textColor="@android:color/holo_purple"
            android:textSize="10dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/shelCategory_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/shelterInformation_txt"
            android:text="Meal Information"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/shelterPeople_Served_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/shelterHours_txt"
            android:autoLink="phone"
            android:fontFamily="@font/gilda_display"
            android:gravity="center"
            android:text="Phone Number"
            android:textColor="@android:color/holo_green_light"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shelterInformation_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/shelterPeople_Served_txt"
            android:fontFamily="@font/gilda_display"
            android:padding="10sp"
            android:text="Meal Information"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>
</android.support.v7.widget.CardView>